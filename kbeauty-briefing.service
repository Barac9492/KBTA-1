[Unit]
Description=K-Beauty Daily Trend Briefing API
After=network.target

[Service]
Type=simple
User=yeojooncho
WorkingDirectory=/Users/yeojooncho/KbeautyTrendAgent-1/kbeauty-trend-agent
Environment=PATH=/Users/yeojooncho/KbeautyTrendAgent-1/kbeauty-trend-agent/venv/bin
ExecStart=/Users/yeojooncho/KbeautyTrendAgent-1/kbeauty-trend-agent/venv/bin/uvicorn api.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
