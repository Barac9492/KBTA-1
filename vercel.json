{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/function.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/cron_handler.py",
      "use": "@vercel/python"
    }
  ],
  "rewrites": [
    {
      "source": "/api/cron/(.*)",
      "destination": "/api/cron_handler.py"
    },
    {
      "source": "/api/agent/(.*)",
      "destination": "/agent/autonomous_agent.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/function.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/$1"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/run-pipeline",
      "schedule": "0 5 * * *"
    },
    {
      "path": "/api/cron/health",
      "schedule": "0 12 * * *"
    }
  ],
  "env": {
    "PYTHONPATH": ".",
    "VERCEL": "true"
  },
  "headers": [
    {
      "source": "/_next/static/chunks/(.*).js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/_next/static/chunks/(.*).jsx",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript"
        }
      ]
    },
    {
      "source": "/_next/static/css/(.*)",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/cron/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        }
      ]
    },
    {
      "source": "/api/agent/(.*)",
      "headers": [
        {
          "key": "X-Robots-Tag",
          "value": "noindex, nofollow"
        }
      ]
    }
  ]
} 